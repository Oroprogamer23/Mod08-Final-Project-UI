<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mod08.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Mod08"
    xmlns:views="clr-namespace:Mod08.View"
    Shell.FlyoutBehavior="Disabled"
    Title="Mod08">


    <ShellContent
         Title="Login"
         ContentTemplate="{DataTemplate views:LoginPage}"
         Route="LoginPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:UserPage}"
        Route="UserPage" />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:NavigationPage}"
        Route="NavigationPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:AttendancePage}"
        Route="AttendancePage" />
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:PaymentPage}"
        Route="PaymentPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:GradePage}"
        Route="GradePage" />




</Shell>
